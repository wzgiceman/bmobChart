<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateProgramActivity">


    <RelativeLayout
        android:id="@+id/rlyout_title"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_determinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@mipmap/arrows_circle_plus"
            />


        <EditText
            android:id="@+id/etv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_input"
            android:hint="请输入表名"
            android:paddingBottom="10px"
            android:paddingLeft="50px"
            android:gravity="center"
            android:paddingRight="50px"
            android:paddingTop="10px"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:background="@mipmap/arrows_circle_check"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llyotu_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@id/rlyout_title"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="节目号"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="节目名"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="时长"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="演员"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="道具"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="麦克"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="灯光"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:singleLine="true"
            android:text="负责人"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

    </LinearLayout>


    <ListView
        android:id="@+id/ltview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llyotu_title"></ListView>

</RelativeLayout>
