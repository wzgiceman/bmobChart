<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rlyout_title"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/jmh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="节目号"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/jmm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="节目名"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="时长"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/yy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="演员"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/dj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="道具"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/mk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="麦克"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/dg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="灯光"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/fzr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="负责人"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>
    </LinearLayout>
</LinearLayout>