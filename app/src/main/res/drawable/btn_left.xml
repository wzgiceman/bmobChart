<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <gradient android:angle="270" android:endColor="@color/rbtn_check" android:startColor="@color/rbtn_check" />

            <corners android:bottomLeftRadius="5dip" android:topLeftRadius="5dip" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <gradient android:angle="270" android:endColor="@color/rbtn_normal" android:startColor="@color/rbtn_normal" />
            <!-- 边框属性 -->
            <stroke android:width="2dp" android:color="@color/whilte" />

            <corners android:bottomLeftRadius="5dip" android:topLeftRadius="5dip" />
        </shape></item>

</selector>