<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--dialog全屏显示-->
    <style name="dialog_ransparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- activity动画 -->
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_back_exit</item>
    </style>

    <!-- 进度框样式 -->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialog_animstyle">
        <item name="android:windowEnterAnimation">@anim/fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_to_bottom</item>
    </style>

    <style name="pop_animstyle">
        <item name="android:windowEnterAnimation">@anim/pop_fade_out_</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_exit</item>
    </style>

    <!-- 绿色按钮 -->
    <style name="btn_ok">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_common_determinal</item>
        <item name="android:textColor">@drawable/tv_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 主题选择按钮 -->
    <style name="rbtn_choice">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/tv_set_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
</resources>